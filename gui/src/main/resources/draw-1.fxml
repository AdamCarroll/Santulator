<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<VBox fx:id="drawWizardPage1" prefHeight="300.0" prefWidth="600.0" styleClass="drawWizardPane" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.santulator.gui.controller.Draw1Controller">
   <children>
      <HBox alignment="TOP_CENTER" styleClass="title">
         <children>
            <Label minWidth="-Infinity" styleClass="prompt" text="Draw: " />
            <Label fx:id="labelDraw1Name" text="Name of the draw" />
         </children>
      </HBox>
      <HBox alignment="CENTER" styleClass="breadcrumbs">
         <children>
            <Label styleClass="breadcrumbDone" text="1" />
            <Pane styleClass="breadcrumbJoinPending" />
            <Label styleClass="breadcrumbPending" text="2" />
            <Pane styleClass="breadcrumbJoinPending" />
            <Label styleClass="breadcrumbPending" text="3" />
         </children>
      </HBox>
      <HBox styleClass="actionLine">
         <children>
            <Button fx:id="buttonDraw1RunDraw" mnemonicParsing="false" styleClass="buttonDraw1RunDraw, significant" text="Start the Draw">
               <graphic>
                  <Glyph fontFamily="FontAwesome" icon="GIFT" styleClass="fontAwesomeIcon" />
               </graphic>
            </Button>
            <ProgressBar fx:id="barDraw1Progress" maxWidth="Infinity" progress="0.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Label fx:id="labelDraw1Result" styleClass="message" text="Draw result description" />
      <Pane VBox.vgrow="ALWAYS" />
   </children>
</VBox>
