<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.santulator.gui.controller.SessionController">
   <top>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints />
          <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints />
          <RowConstraints />
        </rowConstraints>
         <children>
            <Label text="Draw Name:" />
            <Label text="Secret Password:" GridPane.rowIndex="1" />
            <TextField fx:id="fieldDrawName" GridPane.columnIndex="1" />
            <TextField fx:id="fieldPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </top>
   <center>
      <ScrollPane BorderPane.alignment="CENTER" fitToHeight="true" fitToWidth="true">
         <content>
            <ListView fx:id="listParticipants" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
