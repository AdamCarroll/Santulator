<VBox fx:id="drawWizardPage3" prefHeight="300.0" prefWidth="600.0" styleClass="drawWizardPane" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.santulator.gui.controller.Draw3Controller">
   <children>
      <HBox alignment="TOP_CENTER" styleClass="title">
         <children>
            <Label minWidth="-Infinity" styleClass="prompt" text="%draw.title" />
            <Label fx:id="labelDraw3Name" text="Name of the draw" />
         </children>
      </HBox>
      <HBox alignment="CENTER" styleClass="breadcrumbs">
         <children>
            <Label styleClass="breadcrumbDone" text="1" />
            <Pane styleClass="breadcrumbJoinDone" />
            <Label styleClass="breadcrumbDone" text="2" />
            <Pane styleClass="breadcrumbJoinDone" />
            <Label styleClass="breadcrumbDone" text="3" />
         </children>
      </HBox>
      <Label fx:id="passwordNotice" styleClass="passwordNotice" text="%draw3.password.unset">
         <graphic>
            <Glyph fontFamily="FontAwesome" icon="UNLOCK" styleClass="fontAwesomeIcon" />
         </graphic>
      </Label>
      <Label styleClass="openFileNotice" text="%draw3.label.open" />
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="buttonDraw3Open" mnemonicParsing="false" styleClass="significant" text="%draw3.button.open">
               <graphic>
                  <Glyph fontFamily="FontAwesome" icon="EXTERNAL_LINK" styleClass="fontAwesomeIcon" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <Pane VBox.vgrow="ALWAYS" />
   </children>
</VBox>
