<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.glyphfont.Glyph?>

<Pane fx:id="aboutDialogue" styleClass="about" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.santulator.gui.controller.AboutController">
    <children>
        <BorderPane>
            <top>
                <Text styleClass="title" text="Santulator" BorderPane.alignment="CENTER" />
            </top>
            <right>
                <Button fx:id="buttonClose" mnemonicParsing="false" text="Close" BorderPane.alignment="BOTTOM_RIGHT" />
            </right>
            <left>
                <VBox>
                    <children>
                        <Label text="Santulator is Open Source Software,&#10;published under the Apache Licence, Version 2.0." />
                        <Label fx:id="labelVersion" text="Santulator Version: %s." />
                        <Label text="Copyright (c) 2018 Adam Carroll." />
                        <Hyperlink fx:id="linkWebsite" text="https://santulator.github.io/" styleClass="website" >
                            <graphic>
                                <Glyph icon="HOME"/>
                            </graphic>
                        </Hyperlink>
                        <Hyperlink fx:id="linkTwitter" text="\@vocabhunterapp" styleClass="twitter" >
                            <graphic>
                                <Glyph icon="TWITTER"/>
                            </graphic>
                        </Hyperlink>
                    </children>
                </VBox>
            </left>
        </BorderPane>
    </children>
</Pane>
