<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.glyphfont.Glyph?>

<VBox fx:id="drawWizardPage2" prefHeight="200.0" prefWidth="600.0" styleClass="drawWizardPane" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.santulator.gui.controller.Draw2Controller">
   <children>
      <HBox alignment="TOP_CENTER" styleClass="title" VBox.vgrow="ALWAYS">
         <children>
            <Label minWidth="-Infinity" styleClass="prompt" text="Draw: " />
            <Label fx:id="labelDraw2Name" text="Name of the draw" />
         </children>
      </HBox>
      <HBox styleClass="actionLine">
         <children>
            <Button fx:id="buttonDraw2SaveResults" styleClass="buttonDraw2SaveResults" mnemonicParsing="false" text="Save Draw Results">
               <graphic>
                  <Glyph icon="SAVE" styleClass="fontAwesomeIcon" fontFamily="FontAwesome"/>
               </graphic>
            </Button>
            <ProgressBar fx:id="barDraw2Progress" maxWidth="Infinity" progress="0.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Label fx:id="labelDraw2SavedDescription" styleClass="message" text="Draw saved description" />
   </children>
</VBox>
